<?xml version="1.0" encoding="UTF-8"?>

<scripture key="luke-23-1-3" lang="zh" version="cnvs" edition="2001">
	<passage title="路加福音 23:1—3" book="路加福音" title-en="Luke 23:1-3" book-en="Luke">
		<chapter number="23" number-en="23">
			<verse number="1" number-en="1">
				众人都起来，把耶稣押到彼拉多那里，
			</verse>
			<verse number="2" number-en="2">
				控告他说:“我们查出这个人煽惑我们的同胞，阻止纳税给凯撒，并且自称是基督，是王。”
			</verse>
			<verse number="3" number-en="3" jesuswords="true">
				彼拉多问他:“你是犹太人的王吗？”<span class="jesuswords">耶稣回答:“你已经说了。”</span>
			</verse>
		</chapter>
	</passage>
</scripture>

